<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.bookeo">

    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:required="true" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.login.LoginActivity" />
        <activity
            android:name=".view.mediaExplorer.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".view.mediaExplorer.MediaDisplayActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.mediaExplorer.GalleryViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" /> <!-- https://stackoverflow.com/questions/58838548/styling-osslicensesmenuactivity -->
        <activity
            android:name="com.google.android.gms.oss.licenses.OssLicensesMenuActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar" />
        <activity
            android:name=".view.bookeo.BookeoMediaDisplay"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.bookeo.BookeoGalleryView"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.ErrorActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.LandingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.bookeo.BookeoMain"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.bookeo.BookeoBook"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.drive.DriveMediaDisplay"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.drive.DriveGalleryView"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>